<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

  <property name="author" value="system"/>
  <property name="schema" value="public"/>

  <changeSet id="journal.journal_user.1.create_table" author="${author}">
    <validCheckSum>ANY</validCheckSum>

    <preConditions onFail="HALT">
      <not>
        <tableExists schemaName="${schema}" tableName="journal_user"/>
      </not>
    </preConditions>

    <createTable schemaName="${schema}" tableName="journal_user">
      <column name="journal_id" type="BIGINT">
        <constraints nullable="false" primaryKey="true" primaryKeyName="pk_journal_user"/>
      </column>
      <column name="user_id" type="UUID">
        <constraints nullable="false" primaryKey="true" primaryKeyName="pk_journal_user"/>
      </column>
    </createTable>

    <addForeignKeyConstraint baseTableName="journal_user"
                             baseColumnNames="journal_id"
                             constraintName="fk_journaluser_journal"
                             referencedTableName="journal"
                             referencedColumnNames="id"/>
    <addForeignKeyConstraint baseTableName="journal_user"
                             baseColumnNames="user_id"
                             constraintName="fk_journaluser_user"
                             referencedTableName="user"
                             referencedColumnNames="id"/>
  </changeSet>

</databaseChangeLog>
